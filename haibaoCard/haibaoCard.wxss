/* 采用canvas定宽,跟设计图一个宽度,canvas隐藏不展示,因此画多大并不影响视觉 */
.canvas1 {
  width: 750rpx;
  height: 1320rpx;
  position: fixed;
  left: -800rpx;
}

@keyframes move{
  from {
    width: 400rpx;
    height: 700rpx;
  }
	to {
    width: 500rpx;
    height: 876rpx;
  }
}

@keyframes demove{
  from {
    width: 500rpx;
    height: 876rpx;
  }
	to {
    width: 400rpx;
    height: 700rpx;
  }
}

@keyframes dotMove{
  from {
    width: 14rpx;
    height: 14rpx;
    background: #E2E2E2;
    border-radius: 50%;
    margin-right: 12rpx;
  }
	to {
    width: 30rpx;
    height: 14rpx;
    background: #FF6234;
    border-radius: 7rpx;
  }
}

.hb-card-wrapper {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.hb-card-wrapper .swiper-wrapper {
  width: 100%;
  height: 876rpx;
  padding-top: 80rpx;
}
.hb-card-wrapper .swiper-wrapper .my-swiper {
  width: 100%;
  height: 100%;
}
.hb-card-wrapper .swiper-wrapper .my-swiper .swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hb-card-wrapper .swiper-wrapper .my-swiper .swiper-item .con {
  width: 85%;
  height: 85%;
  /* padding: 0 20rpx;
  box-sizing: border-box; */
}
.hb-card-wrapper .swiper-wrapper .my-swiper .swiper-item .con.active {
  width: 100%;
  height: 100%;
  /* animation: move 0.5s; */
  transition: all 0.3s ease-in 0s;
}
.hb-card-wrapper .swiper-wrapper .my-swiper .swiper-item .con.de-active {
  width: 100%;
  height: 700rpx;
  /* animation: demove 0.5s; */
  transition: all 0.3s ease-in 0s;
}
.hb-card-wrapper .swiper-wrapper .my-swiper .swiper-item .con0 .bg{
  width: 90%;
  height: 90%;
  border-radius: 10rpx;
}
.hb-card-wrapper .swiper-wrapper .dots {
  width: 100%;
  height: auto;
  margin-top: 23rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.hb-card-wrapper .swiper-wrapper .dots .dot {
  width: 14rpx;
  height: 14rpx;
  background: #E2E2E2;
  border-radius: 50%;
  margin-right: 12rpx;
}
.hb-card-wrapper .swiper-wrapper .dots .dot.active {
  width: 30rpx;
  height: 14rpx;
  background: #FF6234;
  border-radius: 7rpx;
  animation: dotMove 0.3s;
}
.hb-card-wrapper .swiper-wrapper .tip {  
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A2A7B9;
  line-height: 37rpx;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.hb-card-wrapper .swiper-wrapper .export {
  width: 630rpx;
  height: 80rpx;
  background: #FF6234;
  border-radius: 54rpx;
  font-size: 36rpx;
  font-family: AlibabaPuHuiTiR;
  color: #FFFFFF;
  line-height: 50rpx;
  margin: auto;
  margin-top: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}